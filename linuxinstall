# install postgres, julia and ijulia on ubuntu
sudo apt update && sudo apt upgrade
sudo apt install postgresql postgresql-client -y
sudo service postgresql status
sudo systemctl start postgresql.service

sudo apt-get update && sudo apt-get install -y direnv
direnv hook bash >> ~/.bashrc
echo 'export SEARCHLIGHT_USERNAME="mf"' > ~/.envrc
echo 'export SEARCHLIGHT_PASSWORD="mf"' >> ~/.envrc
echo "PATH_add ~/julia/bin" >> ~/.envrc

sudo curl -L "https://julialang-s3.julialang.org/bin/linux/x64/1.10/julia-1.10.3-linux-x86_64.tar.gz" | tar -xzf -   && mv julia-1.10.3 julia
julia -e "using Pkg; Pkg.add(\"IJulia\")"
#
